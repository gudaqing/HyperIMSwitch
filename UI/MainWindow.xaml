<Window
    x:Class="HyperIMSwitch.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="AppTitleBar" Grid.Row="0" Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftInsetColumn" Width="0"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition x:Name="RightInsetColumn" Width="0"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="1"
                       Text="HyperIMSwitch"
                       VerticalAlignment="Center"
                       Margin="12,0,0,0"
                       FontWeight="SemiBold" />
        </Grid>

        <Frame x:Name="RootFrame" Grid.Row="1" />
    </Grid>
</Window>
